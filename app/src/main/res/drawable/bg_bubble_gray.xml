<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorSelfMessage" />
            </shape>
        </rotate>
    </item>
    <item android:right="@dimen/grid">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorSeparator" />
                    <corners
                        android:bottomLeftRadius="3dp"
                        android:bottomRightRadius="3dp"
                        android:topLeftRadius="3dp" />
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorSelfMessage" />
                    <corners
                        android:bottomLeftRadius="3dp"
                        android:bottomRightRadius="3dp"
                        android:topLeftRadius="3dp" />
                    <padding android:right="@dimen/grid" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
